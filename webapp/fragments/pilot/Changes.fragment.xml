<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog showHeader="false">
		<content>
			<HBox class="sapUiSmallMargin">
				<RadioButton groupName="GroupA" selected="{avmetModel>/ChangeCertificate}" text="Change Certificate of Serviceability"/>
			</HBox>
			<HBox class="sapUiSmallMargin">
				<RadioButton groupName="GroupA" selected="{avmetModel>/ChangeWeapon}" text="Change Weapon Configuration"/>
			</HBox>
			<HBox class="sapUiSmallMargin">
				<RadioButton groupName="GroupA" selected="{avmetModel>/AddFly}" text="Add Flying Requirement"/>
			</HBox>
		</content>
		<beginButton>
			<Button text="Cancel" type="Transparent" press="onCancelChanges"/>
		</beginButton>
		<endButton>
			<Button text="Proceed" type="Emphasized" press="onProceedChange"
				enabled="{parts : ['avmetModel>/ChangeCertificate','avmetModel>/ChangeWeapon','avmetModel>/AddFly'] , formatter : '.formatter.ShowPilotChangeProceed'}"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>