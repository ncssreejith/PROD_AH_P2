<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:tnt="sap.tnt">
	<Popover showHeader="false" placement="Auto" initialFocus="action" class="sapUiPopupWithPadding" contentWidth="350px" contentHeight="150px">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="action" text="Close" press="onClose"/>
			</Toolbar>
		</footer>
		<VBox class="sapUiSmallMargin">
			<VBox>
				<!--<Title wrapping="true" text="Application information" level="H2" textAlign="Center" />-->
				<tnt:InfoLabel id="il7" text="Application information" class="sapUiSmallMarginBottom"  colorScheme="7" width="250px" displayOnly= "true" />
			</VBox>
			<l:HorizontalLayout allowWrapping="true">
				<l:VerticalLayout class="sapUiMediumMarginEnd">
					<ObjectAttribute class="sapUiSmallMarginBegin" title="Application name " text=" Avmet"/>
					<ObjectAttribute class="sapUiSmallMarginBegin" title="Current version " text="1.0"/>
					<ObjectAttribute class="sapUiSmallMarginBegin" title="Released date " text="10 Nov,2020"/>
					<ObjectAttribute class="sapUiSmallMarginBegin" title="UI5 Library " text="1.78"/>
				</l:VerticalLayout>
			</l:HorizontalLayout>
		</VBox>
	</Popover>
</core:FragmentDefinition>