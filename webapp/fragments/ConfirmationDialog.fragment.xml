<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog draggable="true" class="popoverHeaderCSS" type="Message" showHeader="false" contentWidth="30rem" verticalScrolling="false"
		resizable="false">
		<content>
			<VBox justifyContent="Center">
				<Label design="Bold" text="You have unsaved changes, data will be lost" wrapping="true"></Label>
				<Label design="Bold" text="Do you want to save?" wrapping="true"></Label>
			</VBox>
		</content>
		<buttons>
			<Button id="btnClose" text="Cancel" press="onCloseConfirmDialog"></Button>
			<Button id="btnSave" text="Save" tooltip="Save" type="Emphasized" press="onSaveAsDraft"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>