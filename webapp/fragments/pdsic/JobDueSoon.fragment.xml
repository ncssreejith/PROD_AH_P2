<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:f="sap.f">
	<Dialog title="Job Due Soon" contentWidth="100%">
		<ScrollContainer horizontal="false" vertical="true" width="100%" focusable="false" class="sapUiTinyMarginTop">
			<Table class="sapUiResponsivePadding CERTable sapUiSizeCompact" growing="true" growingThreshold="6"
				items="{ path: 'oPilotAccpModel>/aJobs', filters : [{ path : 'jstat', operator : 'EQ', value1 : 'C' },{ path : 'jstat', operator : 'EQ', value1 : 'S' },{ path : 'jobty', operator : 'EQ', value1 : 'S' }]}">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="{i18n>tiScheduled}" level="H2"/>
						<ToolbarSpacer/>
						<!--<SearchField placeholder="Search" width="15rem" class="sapUiSmallMargin"/>-->
						<!--<ComboBox width="10rem">-->
						<!--	<core:Item key="{key}" text="{text}"/>-->
						<!--</ComboBox>-->
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="5rem" hAlign="Center" class="CERTableTextColor">
						<Label text="{i18n>lbServicingDue}" design="Bold" wrapping="true"/>
					</Column>
					<Column width="3rem" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
						<Label text="{i18n>lbDueIn}" design="Bold" wrapping="true"/>
					</Column>
					<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbJobDescription}" design="Bold" wrapping="true"/>
					</Column>
					<Column width="10rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbType}" design="Bold" wrapping="true"/>
					</Column>
					<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbPrime}" design="Bold" wrapping="true"/>
					</Column>
					<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbOtherTrades}" design="Bold" wrapping="true"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" type="Inactive" press="onDefectsDetailsPress">
						<cells>
							<Text text="{oPilotAccpModel>credtm} {oPilotAccpModel>creuzt}"/>
							<Text text="{oPilotAccpModel>jobid}"/>
							<Text text="{oPilotAccpModel>jobid}"/>
							<Text text="{oPilotAccpModel>jobdes}"/>
							<Text text="{oPilotAccpModel>primetxt}"/>
							<Text text="-"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
		<buttons>
			<Button text="Cancel" press="onPressDueSoonClose" type="Reject"/>
			<Button text="Reviewed" press="onReviewPilotAccp" type="Emphasized"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>