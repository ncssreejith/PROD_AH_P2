<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cs="avmet.ah.control" xmlns:tnt="sap.tnt">
	<Dialog title="Limitations" contentWidth="90%">
		<List
			items="{ path: 'oPilotAccpModel>/aLimitaions', filters : [{ path : 'CAPTY', operator : 'EQ', value1 : 'B' },{ path : 'CAPTY', operator : 'EQ', value1 : 'L' }]}"
			width="100%" class="sapUiResponsivePadding hboxColor">
			<CustomListItem class="sapUiSmallMargin hboxColor" type="Navigation" press="onLimitationInformationPress">
				<HBox class="sapUiResponsivePadding hboxColor">
					<cs:ColorStatus title="{localViewModel>Title}" status="{localViewModel>Status}"/>
					<HBox class="sapUiSmallMargin">
						<VBox alignContent="Center" alignItems="Center">
							<Label text="{oPilotAccpModel>AFHR}" design="Bold"></Label>
							<Label text="A/F hrs left"></Label>
						</VBox>
						<VBox alignContent="Center" alignItems="Center" class="sapUiSmallMarginBegin">
							<Label text="{oPilotAccpModel>AFDAY}" design="Bold"></Label>
							<Label text="day left"></Label>
						</VBox>
					</HBox>
					<HBox class="sapUiSmallMargin">
						<VBox>
							<Label text="{oPilotAccpModel>JOBDESC}" design="Bold"/>
							<HBox visible="{= ${oPilotAccpModel>CAPTY} === 'L'}">
								<tnt:InfoLabel text="Limitation" renderMode="Narrow" colorScheme="7" class="sapUiTinyMarginTop" displayOnly="true"/>
								<Label text="{oPilotAccpModel>LDESC}" class="sapUiTinyMargin"/>
							</HBox>
						</VBox>
					</HBox>
				</HBox>
			</CustomListItem>
		</List>
		<buttons>
			<Button text="Cancel" press="onPressLimitationClose" type="Reject"/>
			<Button text="Reviewed" press="onReviewPilotAccp" type="Emphasized" visible="{=${PDSPilotModel>/ViewName} === 'Pilot' ? true : false}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>