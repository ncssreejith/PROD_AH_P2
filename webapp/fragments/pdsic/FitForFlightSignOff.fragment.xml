<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cs="avmet.ah.control">
	<Dialog title="Confirm sign off">
		<VBox class="sapUiSmallMarginBeginEnd sapUiLargeMarginBottom sapUiSmallMarginTop">
			<HBox>
				<CheckBox selected="{oPDSSummaryViewModel>/bAllToolsAcc}"/>
				<Text text="All tools accounted for." class="sapUiSmallMarginTop"/>
			</HBox>
			<HBox visible="{oPDSSummaryViewModel>/bShowDropDown}">
				<CheckBox selected="{oPDSSummaryViewModel>/bCerfify}"/>
				<Text text="I certify that aircraft is found “satis”. Aircraft Fit-For-Flight." class="sapUiSmallMarginTop" wrapping="true"/>
			</HBox>
			<HBox class="sapUiLargeMarginBegin" visible="{oPDSSummaryViewModel>/bShowDropDown}">
				<Select items="{oPDSSummaryViewModel>/aSignOffOptions}" id="signOffOptnId" selectedKey="{oPDSSummaryViewModel>/sSelectedSignOffOpt}">
					<core:Item key="{oPDSSummaryViewModel>ddid}" text="{oPDSSummaryViewModel>description}"/>
				</Select>
			</HBox>
			<HBox visible="{=${oPDSSummaryViewModel>/bShowDropDown} ? false : true}">
				<CheckBox selected="{oPDSSummaryViewModel>/bCerfify}"/>
				<Text text="I certify that aircraft is found “satis”. Aircraft {oPDSSummaryViewModel>/sStatusText}" class="sapUiSmallMarginTop"
					wrapping="true"/>
			</HBox>
		</VBox>
		<beginButton>
			<Button text="Cancel" press="onPressSignOffClose" type="Reject"/>
		</beginButton>
		<endButton>
			<Button text="Sign off" press="onPressSignOffConfirm" type="Emphasized"
				enabled="{parts:['oPDSSummaryViewModel>/bAllToolsAcc','oPDSSummaryViewModel>/bCerfify'],formatter:'.formatter.SignoffEnable'}"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>