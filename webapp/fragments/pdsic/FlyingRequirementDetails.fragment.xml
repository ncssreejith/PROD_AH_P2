<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Flying Requirements" contentWidth="100%">
		<Table class="sapUiResponsivePadding CERTable sapUiSizeCompact" width="98%" items="{oPilotAccpModel>/aFlyReq}">
			<headerToolbar>
				<OverflowToolbar>
					<content>
						<ToolbarSpacer/>
						<!--<SearchField width="30%"/>-->
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="15%" class="CERTableTextColor">
					<header>
						<Label text="Date/Time" design="Bold"/>
					</header>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<header>
						<Label text="Flying Requirements" design="Bold"/>
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Active">
					<cells>
						<Text text="{oPilotAccpModel>begda}"/>
						<Text text="{oPilotAccpModel>frdesc}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="Cancel" press="onPressFlyReqClose" type="Reject"/>
			<Button text="Reviewed" press="onReviewPilotAccp" type="Emphasized" visible="{=${PDSPilotModel>/ViewName} === 'Pilot' ? true : false}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>