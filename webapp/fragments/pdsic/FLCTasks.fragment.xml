<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cs="avmet.ah.control" xmlns:l="sap.ui.layout"
	xmlns:mc="sap.suite.ui.microchart" xmlns:grid="sap.ui.layout.cssgrid">
	<Dialog title="{path : 'oPilotAccpModel>/ViewName', formatter : '.formatter.FLCTaskTitle'}" contentWidth="100%">
		<FlexBox class="flcTaskSignoffHBox sapUiSmallMargin" alignItems="Center" justifyContent="Center">
			<items>
				<core:Icon src="sap-icon://accept" color="white" size="15px" class="sapUiTinyMarginTop"/>
				<Text text="FLC supervisor" class="sapUiTinyMarginBegin flcWhiteFont flcBoldFont"/>
				<Text text="signed at DD/MM/YY, HH:MM" class="sapUiTinyMarginBegin flcWhiteFont"/>
			</items>
		</FlexBox>
		<HBox>
			<!--<VBox class="sapUiSmallMargin">-->
			<!--	<core:HTML-->
			<!--		content='&lt;canvas id=&quot;myFLCCanvas&quot; click="getPointPosition($event)" width=&quot;350&quot; height=&quot;350&quot; style=&quot;border:1px solid #000000&quot;&gt;&lt;/canvas&gt;'></core:HTML>-->
			<!--	<SegmentedButton id="sbFLC" class="sapUiSmallMarginBottom sapUiLargeMarginBegin" selectedKey="Top"-->
			<!--		selectionChange="onSelectionDefectAreaChange('FLCTop','FLCTask')">-->
			<!--		<items>-->
			<!--			<SegmentedButtonItem text="Top" key="FLCTop" width="5rem"/>-->
			<!--			<SegmentedButtonItem text="Left" key="FLCLeft" width="5rem"/>-->
			<!--			<SegmentedButtonItem text="Right" key="FLCRight" width="5rem"/>-->
			<!--		</items>-->
			<!--	</SegmentedButton>-->
			<!--</VBox>-->
			<VBox class="sapUiSmallMargin">
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTop">
					<l:VerticalLayout width="100%">
						<Title text="Fuel" class="sapUiTinyMarginBegin"/>
						<grid:CSSGrid items="{oPilotAccpModel>/Fuel}" id="FuleTilesHBoxId" gridTemplateColumns="250px 250px 250px" gridTemplateRows="150px"
							gridGap="0rem">
							<cs:FuelTile title="{oPilotAccpModel>resdescription}" showNote="{oPilotAccpModel>ShowNote}" count="{oPilotAccpModel>totamt}"
								unit="{oPilotAccpModel>units}" press="onReplBtnClk" maxCount="{oPilotAccpModel>max}" status="{oPilotAccpModel>defuel}"
								servicedCount="{oPilotAccpModel>srvamt}">
								<mc:RadialMicroChart tooltip=" " percentage="{parts : ['oPilotAccpModel>totamt','oPilotAccpModel>max'], formatter : '.formatter.FuelMC'}"
									size="M" valueColor="Critical" press="press" class="percentageHidden"></mc:RadialMicroChart>
								<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
								<core:Icon src="sap-icon://up" color="green" size="10px" press="onEditIconPress"/>
								<core:Icon src="sap-icon://down" color="red" size="10px" press="onEditIconPress"/>
							</cs:FuelTile>
						</grid:CSSGrid>
					</l:VerticalLayout>
					<l:VerticalLayout width="100%" class="sapUiSmallMarginTop">
						<Title text="Tire" class="sapUiTinyMarginBegin"/>
						<grid:CSSGrid class="sapUiTinyMarginBegin sapUiTinyMarginTop" items="{oPilotAccpModel>/Tire}" gridTemplateColumns="220px 220px 220px 220px"
							gridTemplateRows="130px" gridGap="0rem">
							<cs:Others title="{oPilotAccpModel>resdescription}" press="onReplBtnClk" subTitle="" count="{oPilotAccpModel>totamt}"
								footerLeftInfo="Max {oPilotAccpModel>max}">
								<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
							</cs:Others>
						</grid:CSSGrid>
					</l:VerticalLayout>
					<l:VerticalLayout width="100%">
						<Title text="{i18n>oilandMisc}" class="sapUiTinyMarginBegin"/>
						<grid:CSSGrid items="{oPilotAccpModel>/OilMisc}" id="OilTilesHBoxId" gridTemplateColumns="220px 220px 220px 220px" gridTemplateRows="130px"
							gridGap="0rem">
							<cs:FuelTile title="{oPilotAccpModel>resdescription}" showNote="{oPilotAccpModel>ShowNote}" count="{oPilotAccpModel>totamt}"
								unit="{oPilotAccpModel>units}" press="onReplBtnClk" maxCount="{oPilotAccpModel>max}" status="{oPilotAccpModel>defuel}"
								servicedCount="{oPilotAccpModel>srvamt}">
								<mc:RadialMicroChart tooltip=" " percentage="{parts : ['oPilotAccpModel>totamt','oPilotAccpModel>max'], formatter : '.formatter.FuelMC'}"
									size="M" valueColor="Good" press="press" class="percentageHidden"></mc:RadialMicroChart>
								<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
								<core:Icon src="sap-icon://up" color="green" size="10px" press="onEditIconPress"/>
								<core:Icon src="sap-icon://down" color="red" size="10px" press="onEditIconPress"/>
							</cs:FuelTile>
						</grid:CSSGrid>
					</l:VerticalLayout>
				</VBox>
			</VBox>
		</HBox>
		<buttons>
			<Button text="Cancel" press="onPressFLCTaskClose" type="Reject"/>
			<Button text="Reviewed" type="Emphasized" press="onReviewPilotAccp"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>