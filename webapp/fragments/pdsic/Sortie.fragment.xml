<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Sortie Monitoring" contentWidth="100%">
		<Table class="CERTable sapUiSmallMargin" width="98%" items="{oPilotAccpModel>/Sortie}">
			<headerToolbar>
				<OverflowToolbar>
					<content>
						<ToolbarSpacer/>
						<!--<SearchField width="30%"/>-->
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column class="CERTableTextColor">
					<Label text="Date/Time" design="Bold"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="Aircraft Monitoring" design="Bold"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="No. of Sorties" design="Bold"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="Trademan" design="Bold"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Active">
					<cells>
						<Text text="{oPilotAccpModel>SORDT}, {oPilotAccpModel>SORTM}"/>
						<Text text="{oPilotAccpModel>SORDESC}"/>
						<Text text="{oPilotAccpModel>SORCNT}"/>
						<Text text="{oPilotAccpModel>SG1USR}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="Cancel" press="onPressSortieClose" type="Reject"/>
			<Button text="Reviewed" press="onReviewPilotAccp" type="Emphasized" visible="{=${PDSPilotModel>/ViewName} === 'Pilot' ? true : false}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>