<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:f="sap.f">
	<Dialog title="Defects" contentWidth="100%">
		<ScrollContainer horizontal="false" vertical="true" width="100%" focusable="false" class="sapUiTinyMarginTop">
			<Table class="sapUiResponsivePadding CERTable sapUiSizeCompact" growing="true" growingThreshold="6"
				items="{ path: 'oPilotAccpModel>/aJobs', filters : [{ path : 'jstat', operator : 'EQ', value1 : 'C' },{ path : 'jstat', operator : 'EQ', value1 : 'S' },{ path : 'jobty', operator : 'EQ', value1 : 'D' }]}">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="{i18n>tiDefects}" level="H2"/>
						<ToolbarSpacer/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="5rem" hAlign="Center" class="CERTableTextColor">
						<Label text="{i18n>lbDateTime}" design="Bold" wrapping="true" class="sapUiTinyMarginTop"/>
					</Column>
					<Column width="3rem" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
						<Label text="{i18n>lbSymbol}" design="Bold" wrapping="true"/>
					</Column>
					<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbJobNo}" design="Bold" wrapping="true" class="sapUiTinyMarginTop"/>
					</Column>
					<Column width="10rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbDefect}" design="Bold" wrapping="true"/>
					</Column>
					<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbPrime}" design="Bold" wrapping="true" class="sapUiTinyMarginTop"/>
					</Column>
					<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbTrades}" design="Bold" wrapping="true" class="sapUiTinyMarginTop"/>
					</Column>
					<Column width="3rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Label text="{i18n>lbAction}" design="Bold" wrapping="true"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" type="Inactive" press="onDefectsDetailsPress">
						<cells>
							<Text text="{oPilotAccpModel>credtm} {oPilotAccpModel>creuzt}"/>
							<HBox>
								<Button icon="sap-icon://decline" class="red" type="Transparent" visible="{=${oPilotAccpModel>symbol} === '1' ? true : false}"></Button>
								<Button text="/" class="red redText" type="Transparent" visible="{=${oPilotAccpModel>symbol} === '2' ? true : false}"></Button>
								<Button icon="sap-icon://less" class="red" type="Transparent" visible="{=${oPilotAccpModel>symbol} === '3' ? true : false}"></Button>
							</HBox>
							<Text text="{oPilotAccpModel>jobid}"/>
							<Text text="{oPilotAccpModel>jobdes}"/>
							<Text text="{oPilotAccpModel>primetxt}"/>
							<Text text="-"/>
							<Text text="-"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
		<buttons>
			<Button text="Cancel" press="onPressDefectsClose" type="Reject"/>
			<Button text="Reviewed" press="onReviewPilotAccp" type="Emphasized"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>