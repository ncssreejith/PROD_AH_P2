<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cc="avmet.ah.control" xmlns:l="sap.ui.layout">
	<Dialog title="Weapon Configuration" contentWidth="100%">
		<FlexBox class="flcTaskSignoffHBox sapUiSmallMargin" alignItems="Center" justifyContent="Center">
			<items>
				<core:Icon src="sap-icon://accept" color="white" size="15px" class="sapUiTinyMarginTop"/>
				<Text text="WLC supervisor" class="sapUiTinyMarginBegin flcWhiteFont flcBoldFont"/>
				<Text text="signed at DD/MM/YY, HH:MM" class="sapUiTinyMarginBegin flcWhiteFont"/>
			</items>
		</FlexBox>
		<HBox>
			<VBox class="sapUiSmallMargin">
				<Image src="css/img/WeaponConfigFlight.JPG"/>
			</VBox>
			<VBox>
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<Title text="Stations"/>
					<FlexBox wrap="Wrap" items="{path:'oPilotAccpModel>/stns',filters:[{path:'STNMID',operator:'EQ',value1:'STNM_S'}]}">
						<cc:Station subTitle="{oPilotAccpModel>LTXT}" footerLeftInfo="Qty {oPilotAccpModel>TOTQTY}" press="onStationPress" footerRightInfo="S/N {oPilotAccpModel>SERNR}"
							class=" sapUiTinyMargin">
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
							<core:Icon src="sap-icon://broken-link" color="{path: 'oPilotAccpModel>SignOff', formatter : '.formatter.WeaponConfigSignOff' }" size="52px"
								press="onIconPress"/>
						</cc:Station>
						<layoutData>
							<l:GridData span="XL12 L12 M12 S12"/>
						</layoutData>
					</FlexBox>
					<Title text="Others" class="sapUiSmallMarginTop"/>
					<HBox items="{path:'oPilotAccpModel>/stns',filters:[{path:'STNMID',operator:'EQ',value1:'STNM_O'}]}">
						<cc:Others title="Chaff" subTitle="" count="0" footerLeftInfo="Max 240" class="sapUiSmallMargin">
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
						</cc:Others>
					</HBox>
				</l:VerticalLayout>
			</VBox>
		</HBox>
		<buttons>
			<Button text="Cancel" press="onPressWeaponConfigClose" type="Reject"/>
			<Button text="Reviewed" press="onReviewPilotAccp" type="Emphasized" visible="{=${PDSPilotModel>/ViewName} === 'Pilot' ? true : false}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>