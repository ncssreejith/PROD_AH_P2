<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:ct="avmet.ah.control"
	xmlns:grid="sap.ui.layout.cssgrid">
	<FlexBox class="columns">
		<VBox>
			<ct:HeaderCard title="Adhoc Servicing"/>
		</VBox>
		<grid:CSSGrid items="{oCreatFlightSerModel>/AdhocServicing}" gridTemplateColumns="1fr 1fr 1fr" gridTemplateRows="150px 150px 150px"
			gridGap="0rem">
			<ct:IconHeaderCard title="{oCreatFlightSerModel>description}" press="onFlightServiceTilePress" class="sapUiSmallMarginEnd" hoverOut="onCardHoverOut" hover="onCardHover">
				<Image src="{oCreatFlightSerModel>ImgSrc}"/>
			</ct:IconHeaderCard>
		</grid:CSSGrid>
	</FlexBox>
</core:FragmentDefinition>