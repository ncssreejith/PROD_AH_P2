<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table class="sapUiResponsivePadding sapUiSmallMarginTop CERTable tableHFont tableHeaderFontStyle" items="{oRepDetailsModel>/OilMisc}"
		id="oilFragId">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="{i18n>oilandMisc}" level="H2"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column hAlign="Left" width="20%">
				<Label text="Type" design="Bold"/>
			</Column>
			<Column minScreenWidth="Tablet" width="20%" demandPopin="true" hAlign="Left">
				<Label text="Serviced Amount (L)" design="Bold" wrapping="true"/>
			</Column>
			<!--<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
				<Label text="Total Amount" design="Bold" wrapping="true"/>
			</Column>-->
			<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left"></Column>
		</columns>
		<items>
			<!--max="{parts: ['oRepDetailsModel>totamt','oRepDetailsModel>max'], formatter : '.formatter.FormatMaxValueFloat'}"-->
			<ColumnListItem class="tableTextColor">
				<cells>
					<Text text="{oRepDetailsModel>resdescription}"/>
					<StepInput value="{oRepDetailsModel>srvamt}" step="{path : 'oRepDetailsModel>resdescription', formatter : '.formatter.formatStepOil'}"
						displayValuePrecision="{path : 'oRepDetailsModel>resdescription', formatter : '.formatter.formatDecimalOil' }" validationMode="LiveChange"
						min="0" change="onOilTblValueChange"
						max="{path:'oRepDetailsModel>max',formatter:'.formatter.formatMaxValue'}"
						description="/ {oRepDetailsModel>max}"/>
					<!--<StepInput value="{oRepDetailsModel>totamt}" step="{path : 'oRepDetailsModel>resdescription', formatter : '.formatter.formatStepOil'}"
						validationMode="LiveChange" change="onOilTblValueChange" min="0"
						displayValuePrecision="{path : 'oRepDetailsModel>resdescription', formatter : '.formatter.formatDecimalOil' }"
						min="0" max="{path: 'oRepDetailsModel>max', formatter : '.formatter.formatMaxValue'}" description="/ {oRepDetailsModel>max}"/>-->
					<Text visible="{=${oRepDetailsModel>hrsince} === null ? false :true}" text="Engine Hours since last top up: {oRepDetailsModel>hrsince} hrs" wrapping="true"></Text>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>