<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:cc="avmet.ah.control">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Title text="Stations"/>
		<l:Grid>
			<FlexBox wrap="Wrap" items="{path:'oWCModel>/stns',filters:[{path:'STNMID',operator:'EQ',value1:'STNM_S'},{path:'WESID',operator:'NE',value1:null}]}">
				<cc:Station title="{oWCModel>WEDESC}" subTitle="{= ${oWCModel>/stns/0/APPRCOUNT}>1? ${oWCModel>LTXT}:${oWCModel>ADPDESC}}" footerLeftInfo="Qty {oWCModel>TOTQTY}" footerRightInfo="S/N {oWCModel>SERNR}"
					class=" sapUiTinyMargin" press="onStationPress">
					<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
					<core:Icon src="sap-icon://broken-link" visible="{= ${oWCModel>CONECT}!=='N'}" color="{path:'oWCModel>CONECT',formatter:'.formatter.wcStationColor'}" size="3rem"
						press="onIconPress"/>
				</cc:Station>
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</FlexBox>
		</l:Grid>
		<Title text="Others" class="sapUiSmallMarginTop"/>
		<HBox items="{path:'oWCModel>/stns',filters:[{path:'STNMID',operator:'EQ',value1:'STNM_O'}]}">
			<cc:Others title="{oWCModel>STXT}" showButton="{oWCModel>HCFLAG}" press="onStationPress" count="{oWCModel>TOTQTY}" footerLeftInfo="Max {oWCModel>MAX}" class="sapUiSmallMargin">
				<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
			</cc:Others>
		</HBox>
	</l:VerticalLayout>
</core:FragmentDefinition>