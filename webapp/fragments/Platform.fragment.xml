<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="">
		<content>
			 <VBox class="sapUiResponsiveMargin">
                <HBox>
                    <Text text="Please select your Platform" class="sapUiResponsiveMargin"/>
                </HBox>
		<!-- lakshmi-25.11.2020- added for sso login- start -->
                <RadioButtonGroup id="CBPlatformSelection" buttons="{loginModel>/}">
					<RadioButton text="{loginModel>PLATFORM}" />
				<!-- lakshmi-25.11.2020- added for sso login- end -->	
				</RadioButtonGroup>
            </VBox>	
		</content>
		<endButton>
			<Button text="Proceed" type="Emphasized" press="onPlatformSelect"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>