<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog showHeader="false">
		<content>
			<RadioButtonGroup class="sapUiSmallMargin" buttons="{path:'avmetModel>/runningChange'}">
				<buttons>
					<RadioButton text="Pilot name: {avmetModel>PILOTNAME}" enabled="{= ${avmetModel>PILOTFLAG} === 'N' }"/>
				</buttons>
			</RadioButtonGroup>
		</content>
		<beginButton>
			<Button text="Cancel" type="Transparent" press="onRunningChangeCancel"/>
		</beginButton>
		<endButton>
			<Button text="Pilot Update" type="Emphasized" press="onRunningChangePress" enabled="{= !${avmetModel>/runningChangeDone}}"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>