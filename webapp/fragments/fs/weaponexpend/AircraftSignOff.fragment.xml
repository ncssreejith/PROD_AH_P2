<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Declare aircraft safe">
		<content>
			<VBox class="sapUiSmallMargin">
				<Text text="I certify that ALL weapons / weapon systems on the aircraft are rendered SAFE" wrapping="true" class="sapUiTinyMargin"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="Cancel" type="Transparent" press="onACSignOffCancel"/>
		</beginButton>
		<endButton>
			<Button text="Sign off" type="Emphasized" press="onACSignOffConfirm"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>