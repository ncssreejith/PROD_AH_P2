<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Raise Schedule Concession" class="popoverHeaderCSS" contentWidth="40%">
		<VBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop" width="70%">
			<VBox class="sapUiLargeMarginBeginEnd sapUiMediumMarginTopBottom" alignItems="Central" alignContent="Central">
				<Label text="{i18n>lbJobDue}" design="Bold"/>
				<HBox>
					<ComboBox width="13rem" placeholder="{i18n>phSelect}" selectedKey="{RSModel>/DueBy}" items="{JobDueSet>/}" change="onDueSelectChange">
						<core:Item key="{JobDueSet>ddid}" text="{JobDueSet>description}"/>
					</ComboBox>
					<HBox id="SchJobDueId" class="sapUiTinyMarginBegin" visible="{RSModel>/UtilValFlag}">
						<StepInput width="13rem" min="0" valueStateText="{i18n>ERROR_GENERIC}" visible="{= ${CapExtendSet>/UTIL1} !== 'JDU_10'}"
							value="{RSModel>/UtilVal}"/>
						<StepInput width="13rem" min="0" valueStateText="{i18n>ERROR_GENERIC}" visible="{= ${CapExtendSet>/UTIL1} === 'JDU_10'}"
							displayValuePrecision="1" value="{RSModel>/UtilVal}"/>
					</HBox>
					<DatePicker width="13rem" valueStateText="{i18n>ERROR_GENERIC}" visible="{RSModel>/ExpDateFlag}"
						value="{path: 'RSModel>/ExpDate', type: 'sap.ui.model.type.Date', formatOptions: {strictParsing: true , UTC: true, pattern:'dd/MM/yyyy'}}"
						placeholder="New job creation date ..." change="handleChange" class="sapUiSmallMarginBottom"/>
				</HBox>
			</VBox>
		</VBox>
		<buttons>
			<Button text="Cancel" press="onCloseRaiseScheduleConcession"/>
			<Button text="Raise Schedule Concession" press="onRaiseScheduleConcessionPress('Y')" type="Emphasized"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>