<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Raise Schedule Concession" class="popoverHeaderCSS" contentWidth="40%">
		<VBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop" width="70%">
			<HBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginBottom">
				<VBox>
					<Label design="Bold" text="Due By:" width="350px"/>
					<SegmentedButton selectedKey="{RSModel>/DueBy}" selectionChange="onReasonTypeChange" fieldGroupIds="fgSGBtn">
						<items>
							<SegmentedButtonItem text="Date" key="D" width="70%"/>
							<SegmentedButtonItem text="Utilisation" key="U" width="70%"/>
							<SegmentedButtonItem text="" key="N" visible="false"/>
						</items>
					</SegmentedButton>
				</VBox>
			</HBox>
			<HBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginBottom" visible="{= ${RSModel>/DueBy}==='D' ? true:false}">
				<VBox>
					<Label design="Bold" text="Expiry Date" width="150px"/>
				<DatePicker
						value="{path: 'RSModel>/ExpDate', type: 'sap.ui.model.type.Date', formatOptions: {strictParsing: true , UTC: true, pattern:'dd/MM/yyyy'}}"
						width="200px" fieldGroupIds="fgDate" required="{SummaryModel>/bDateSection}"/>
				</VBox>
				<!--<VBox class="sapUiSmallMarginBegin">
					<Label design="Bold" text="Time" width="150px"/>
					<TimePicker width="200px" value="{SummaryModel>/EXPTM}" valueFormat="HH:mm" displayFormat="HH:mm" fieldGroupIds="fgTime"
						required="{SummaryModel>/bDateSection}"/>
				</VBox>-->
			</HBox>
			<HBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginBottom"  visible="{= ${RSModel>/DueBy}==='U' ? true:false}">
				<VBox>
					<Label design="Bold" text="Utilisation" width="150px"/>
					<ComboBox width="200px" items="{UtilizationCBModel>/}" selectedKey="{RSModel>/Util}" change="onUilisationChange"
						fieldGroupIds="fgCmbBox" required="{SummaryModel>/bUtilisationSection}">
						<core:Item text="{UtilizationCBModel>description}" key="{UtilizationCBModel>ddid}"/>
					</ComboBox>
				</VBox>
				<VBox class="sapUiSmallMarginBegin">
					<Label/>
					<StepInput width="200px" value="{RSModel>/UtilVal}" required="{SummaryModel>/bAirFrameAndTAC}"/>
				</VBox>
			</HBox>
		</VBox>
		<buttons>
			<Button text="Cancel" press="onCloseRaiseScheduleConcession"/>
			<Button text="Raise Schedule Concession" press="onRaiseScheduleConcessionPress" type="Emphasized"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>