<mvc:View controllerName="avmet.ah.controller.UpdateFlightServicing" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m" xmlns:ct="avmet.ah.control">
	<Page id="page" title="Update Flight Servicing ({oUpdateFlightModel>/sPageTitle})" showNavButton="true" enableScrolling="true"
		navButtonPress="onNavBack">
		<content>
			<l:VerticalLayout class="sapUiMediumMargin backgroundBlue" width="95%">
				<l:content>
					<Toolbar>
						<Title text="Select Tasks"></Title>
					</Toolbar>
					<VBox items="{path : 'oUpdateFlightModel>/aTasks' , sorter : { path : 'sequence', descending: false}}">
						<l:Grid >
							<VBox>
								<ct:HeaderCard title="{oUpdateFlightModel>description}"/>
							</VBox>
							<!--<l:Grid >-->
							<FlexBox wrap="Wrap" items="{oUpdateFlightModel>subtask}">
								<items>
									<ct:IconHeaderCard title="{oUpdateFlightModel>description}" press="onPressUpdateFlightSerTile" signOffFlag="{oUpdateFlightModel>status}"
										class="sapUiSmallMarginEnd" hoverOut="onCardHoverOut" hover="onCardHover">
										<Image src="{oUpdateFlightModel>ImgSrc}"/>
										<core:Icon src="sap-icon://accept" color="white"></core:Icon>
									</ct:IconHeaderCard>
								</items>
								<layoutData>
									<l:GridData span="XL9 L9 M9 S9"/>
								</layoutData>
							</FlexBox>
						</l:Grid>
					</VBox>
					<!--<core:Fragment fragmentName="avmet.ah.fragments.flc.FLC" type="XML"/>-->
					<!--<Toolbar height="1px"/>-->
					<!--<core:Fragment fragmentName="avmet.ah.fragments.wlc.WLC" type="XML"/>-->
					<!--<Toolbar height="1px"/>-->
					<!--<core:Fragment fragmentName="avmet.ah.fragments.pdsic.PDSIC" type="XML"/>-->
				</l:content>
			</l:VerticalLayout>
		</content>
	</Page>
</mvc:View>