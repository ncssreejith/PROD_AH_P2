<mvc:View controllerName="avmet.ah.controller.Replenishment" xmlns:cs="avmet.ah.control" xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m"
	xmlns:mc="sap.suite.ui.microchart">
	<Page id="page" title="Replenishment ({path : 'oReplenishViewModel>/sPageTitle', formatter : '.formatter.PageTitle'})" showNavButton="true"
		enableScrolling="true" navButtonPress="onNavBack">
		<content>
			<VBox class="sapUiLargeMarginBegin sapUiSmallMarginTop">
				<l:VerticalLayout width="100%">
					<Title text="Fuel" class="sapUiTinyMarginBegin"/>
					<grid:CSSGrid items="{oReplenishViewModel>/Fuel}" id="FuleTilesHBoxId" gridTemplateColumns="250px 250px 250px 250px 250px"
						gridTemplateRows="150px" gridGap="0rem">
						<cs:FuelTile title="{oReplenishViewModel>resdescription}" showNote="{oReplenishViewModel>ShowNote}" count="{oReplenishViewModel>totamt}"
							unit="{oReplenishViewModel>units}" press="onReplBtnClk" maxCount="{oReplenishViewModel>max}" status="{oReplenishViewModel>defuel}"
							servicedCount="{oReplenishViewModel>srvamt}">
							<mc:RadialMicroChart tooltip=" "
								percentage="{parts : ['oReplenishViewModel>totamt','oReplenishViewModel>max'], formatter : '.formatter.FuelMC'}" size="M"
								valueColor="{parts : ['oReplenishViewModel>totamt','oReplenishViewModel>max'], formatter : '.formatter.FuelMCState'}" press="press"
								class="percentageHidden"></mc:RadialMicroChart>
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
							<core:Icon src="sap-icon://up" useIconTooltip="false" color="green" size="10px" press="onEditIconPress"/>
							<core:Icon src="sap-icon://down" useIconTooltip="false" color="red" size="10px" press="onEditIconPress"/>
						</cs:FuelTile>
					</grid:CSSGrid>
				</l:VerticalLayout>
				<!--<l:VerticalLayout width="100%" class="sapUiSmallMarginTop"
					visible="{path :'oReplenishViewModel>/srvtid', formatter : '.formatter.ShowTire'}">
					<Title text="Tire" class="sapUiTinyMarginBegin"/>
					<grid:CSSGrid class="sapUiTinyMarginBegin sapUiTinyMarginTop" items="{oReplenishViewModel>/Tire}"
						gridTemplateColumns="220px 220px 220px 220px" gridTemplateRows="130px" gridGap="0rem">
						<cs:Others title="{oReplenishViewModel>resdescription}" press="onReplBtnClk" subTitle="" count="{oReplenishViewModel>totamt}"
							footerLeftInfo="Max {oReplenishViewModel>max}">
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
						</cs:Others>
					</grid:CSSGrid>
				</l:VerticalLayout>-->
				<l:VerticalLayout width="100%">
					<Title text="{i18n>oilandMisc}" class="sapUiTinyMarginBegin"/>
					<grid:CSSGrid items="{oReplenishViewModel>/OilMisc}" id="OilTilesHBoxId" gridTemplateColumns="250px 250px 250px 250px" gridTemplateRows="150px"
						gridGap="0rem">
						<cs:FuelTile title="{oReplenishViewModel>resdescription}" showNote="{oReplenishViewModel>ShowNote}" count="{oReplenishViewModel>srvamt}"
							unit="{oReplenishViewModel>units}" press="onReplBtnClk" maxCount="{oReplenishViewModel>max}" status="null"
							servicedCount="{oReplenishViewModel>srvamt}">
							<mc:RadialMicroChart tooltip=" "
								percentage="{parts : ['oReplenishViewModel>srvamt','oReplenishViewModel>max'], formatter : '.formatter.FuelMC'}" size="M"
								valueColor="{parts : ['oReplenishViewModel>srvamt','oReplenishViewModel>max'], formatter : '.formatter.FuelMCState'}" press="press"
								class="percentageHidden"></mc:RadialMicroChart>
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
							<core:Icon src="sap-icon://up" useIconTooltip="false" color="green" size="10px" press="onEditIconPress"/>
							<core:Icon src="sap-icon://down" useIconTooltip="false" color="red" size="10px" press="onEditIconPress"/>
						</cs:FuelTile>
					</grid:CSSGrid>
				</l:VerticalLayout>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Default" text="Back" press="onNavBack"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>