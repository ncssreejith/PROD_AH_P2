<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" displayBlock="true"
	controllerName="avmet.ah.controller.Replenishment_Details" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:ct="ah_bf_replenishment_details.AH_BF_Replenishment_Details.control" xmlns:l="sap.ui.layout">
	<Page id="page" title="Replenishment ({path : 'oRepDetailsModel>/sPageTitle', formatter : '.formatter.PageTitle'})" showNavButton="true"
		enableScrolling="false" navButtonPress="onNavBack">
		<content>
			<HBox class="sapUiLargeMargin sapUiLargeMarginBottom hBoxColor">
				<VBox class="sapUiSmallMargin sapUiLargeMarginTop vBoxTopMargin">
					<SelectList items="{oRepDetailsModel>/aSelectItems}" selectedKey="{oRepDetailsModel>/sSelectedRepl}" selectionChange="onListSelect"
						class="listLenClass listItemClass">
						<core:Item key="{oRepDetailsModel>Key}" text="{oRepDetailsModel>Text}" class="listItemClass"/>
					</SelectList>
				</VBox>
				<VBox>
					<ScrollContainer id="scrollContainerId" height="{oRepDetailsModel>/ScrollContainerHeight}" class="sapUiSmallBottom" vertical="true"
						focusable="true">
						<core:Fragment fragmentName="avmet.ah.fragments.flc.Fuel" type="XML"/>
						<!--<VBox visible="{path :'oRepDetailsModel>/srvtid', formatter : '.formatter.ShowTire'}">
							<core:Fragment fragmentName="avmet.ah.fragments.flc.Tire" type="XML"/>
						</VBox>-->
						<core:Fragment fragmentName="avmet.ah.fragments.flc.Oil" type="XML"/>
					</ScrollContainer>
				</VBox>
			</HBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Default" text="Back" press="onNavBack"/>
				<Button type="Emphasized" text="Sign Off" press="onPressSignOffConfirm"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>