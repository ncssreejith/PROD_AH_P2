<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:f="sap.f">
	<ScrollContainer horizontal="false" vertical="true" width="100%" focusable="false" class="sapUiTinyMarginTop">
		<Table id="AllScheduledJobId" class="sapUiResponsivePadding CERTable sapUiSizeCompact" items="{SchJobModelAll>/}" growing="true"
			growingTriggerText="{i18n>lbLoadMore}">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="{i18n>tiScheduledServicing}" level="H2"/>
					<ToolbarSpacer/>
					<!--<Button text="Create Schedule Job" type="Default" class="btnColor sapUiSizeCompact sortBtnColor"
						press="onCreateScheduleJob"/>-->
					<SearchField placeholder="Search" width="15rem" class="sapUiSmallMargin" value="{LocalJobsModel>/AllScheduledJobId}" search="onSearch($event,'AllScheduledJobId','SchJobModelAll','JOBDESC')"/>
					<ComboBox width="10rem">
						<core:Item key="{key}" text="{text}"/>
					</ComboBox>
					<Button icon="sap-icon://add-filter" text="{i18n>btnFilterSchedule}" type="Default" class="btnColor sapUiSizeCompact sortBtnColor"
						press="onAddDemandSpaes"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="3rem" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
					<Label text="{i18n>lbDueIn}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="6rem" hAlign="Center" class="CERTableTextColor">
					<Label text="Um" design="Bold" wrapping="true"/>
				</Column>
				<Column width="6rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbServicingDue}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="15rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbJobDescription}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="Type" design="Bold" wrapping="true"/>
				</Column>
				<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="Prime" design="Bold" wrapping="true"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Navigation" press="onScheduleJobPress('ALL',$event)">
					<cells>
						<Text text="{SchJobModelAll>DUEIN}"/>
						<Text text="{SchJobModelAll>UM}"/>
						<VBox alignItems="Center" alignContent="Center">
							<Text text="{SchJobModelAll>SERVDUE}" visible="{=${SchJobModelAll>SERVDUE} !== '' || ${SchJobModelAll>SERVDUE} !== null ? true : false}"/>
							<Text text="{path:'SchJobModelAll>SERVDT', formatter:'.formatter.defaultDateFormatDisplay'}"
								visible="{=${SchJobModelAll>SERVDUE} === '' || ${SchJobModelAll>SERVDUE} === null ? true : false}"/>
						</VBox>
						<Text text="{SchJobModelAll>JOBDESC}"/>
						<Text text="{SchJobModelAll>CTYPE}"/>
						<Text text="{SchJobModelAll>WRCTR}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
</core:FragmentDefinition>