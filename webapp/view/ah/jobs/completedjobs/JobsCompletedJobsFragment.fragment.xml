<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:f="sap.f">
	<ScrollContainer horizontal="false" vertical="true" width="100%" focusable="false" class="sapUiTinyMarginTop">
		<Table class="sapUiResponsivePadding CERTable sapUiSizeCompact" growing="true" growingTriggerText="{i18n>lbLoadMore}" items="{JobModelC>/}">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="{i18n>tiCompletedJobs}" level="H2"/>
					<ToolbarSpacer/>
					<SearchField placeholder="Search" width="15rem" class="sapUiSmallMargin"/>
					<ComboBox width="10rem">
						<core:Item key="{key}" text="{text}"/>
					</ComboBox>
					<Button icon="sap-icon://add-filter" text="{i18n>btnFilterSchedule}" type="Default" class="btnColor sapUiSizeCompact sortBtnColor"
						press="onAddDemandSpaes"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="5rem" hAlign="Center" class="CERTableTextColor">
					<Label text="{i18n>lbDateTime}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="8rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbJobNo}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="10rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbJobDescription}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbDateTime}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="8rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbRectificationSummary}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbJobType}" design="Bold" wrapping="true"/>
				</Column>
				<Column width="8rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Label text="{i18n>lbPrimeWorkCenter}" design="Bold" wrapping="true"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Navigation" press="onDefectsCompletePress">
					<cells>
						<VBox>
							<Text text="{path:'JobModelC>credtm', formatter:'.formatter.defaultDateFormatDisplay'}"/>
							<Text text="{path:'JobModelC>creuzt', formatter:'.formatter.defaultTimeFormatDisplay'}" class="sapUiTinyMarginBegin"/>
						</VBox>
						<Text text="{JobModelC>jobid}"/>
						<Text text="{JobModelC>jobdesc}"/>
						<VBox>
							<Text text="{path:'JobModelC>rectdt', formatter:'.formatter.defaultDateFormatDisplay'}"/>
							<Text text="{path:'JobModelC>recttm', formatter:'.formatter.defaultTimeFormatDisplay'}" class="sapUiTinyMarginBegin"/>
						</VBox>
						<Text text="{JobModelC>recttxt}"/>
						<Text text="{path:'JobModelC>jobty', formatter:'.formatter.defaultJobType'}"/>
						<Text text="{JobModelC>ptext}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
</core:FragmentDefinition>