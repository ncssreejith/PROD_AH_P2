<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar">
	<l:VerticalLayout width="100%">
		<HBox>
			<VBox>
				<HBox>
					<Label design="Bold" text="Describe Task"/>
					<core:Icon src="sap-icon://sys-help-2" press="handlePressToolTipMenu('DSCT',$event)" class="sapUiTinyMarginBegin" size="12px" color="#031E48"/>
				</HBox>
				<TextArea maxLength="500" valueStateText="{i18n>ERttTaskDesc}" value="{oCreateTaskModel>/sOtherDesc}" fieldGroupIds="fgTxtArea" required="{oCreateTaskModel>/bOthers}"
					showExceededText="true" width="350px" rows="5" liveChange="handleLiveChangeFlyingRequirements"/>
			</VBox>
			<VBox class="sapUiLargeMarginBegin">
				<HBox>
					<Label design="Bold" text="Technical Order/ Reference"/>
					<Text text="Optional" class="sapUiSmallMarginBegin"/>
				</HBox>
				<Input width="250px" value="{oCreateTaskModel>/sTechOrderRef}" fieldGroupIds="fgInput" required="{oCreateTaskModel>/bOthers}"/>
			</VBox>
		</HBox>
	</l:VerticalLayout>
</core:FragmentDefinition>