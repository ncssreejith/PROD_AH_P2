<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:f="sap.f" xmlns:tnt="sap.tnt">
	<VBox class="WhiteVBox sapUiTinyMargin" height="450px">
		<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
			<items>
				<Text class="PDSFragTitle" text="Pending Approvals"/>
				<Button text="Reviewed" id="btnPendApprReview" type="Emphasized" press="onReviewedPress"/>
			</items>
		</FlexBox>
		<List id="lstPendApprovals" class="sapUiTinyMarginBeginEnd" growingScrollToLoad="true" growing="true" includeItemInSelection="true"
			mode="SingleSelectMaster" growingThreshold="100" noDataText="No Data" items="{oPilotAccpModel>/aPendApprovals}"
			selectionChange="onSelectionChange">
			<CustomListItem>
				<VBox class="sapUiSmallMargin">
					<HBox>
						<Text text="{path:'oPilotAccpModel>CAPDT', formatter:'.formatter.defaultDateFormatDisplay'}"/>
						<Text text="{path:'oPilotAccpModel>CAPTM', formatter:'.formatter.defaultTimeFormatDisplay'}" class="sapUiTinyMarginBegin"/>
					</HBox>
					<HBox justifyContent="SpaceBetween">
						<Label wrapping="true" text="{oPilotAccpModel>description}" design="Bold"/>
						<core:Icon src="sap-icon://navigation-right-arrow"/>
					</HBox>
					<HBox>
						<tnt:InfoLabel text="{oPilotAccpModel>text}" renderMode="Narrow" colorScheme="7" displayOnly="true"/>
						<tnt:InfoLabel text="Limitation" class="sapUiTinyMarginBegin" renderMode="Narrow" colorScheme="6" displayOnly="true"
							visible="{= ${oPilotAccpModel>flag}==='B' ? true:false}"/>
					</HBox>
				</VBox>
			</CustomListItem>
		</List>
	</VBox>
</core:FragmentDefinition>