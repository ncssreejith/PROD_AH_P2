			<VBox>
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<Title text="Stations"/>
					<l:Grid>
						<FlexBox wrap="Wrap" items="{path:'oPilotAccpModel>/stns',filters:[{path:'STNMID',operator:'EQ',value1:'STNM_S'}]}">
							<items>
								<cc:Station1
									title="{= (${oPilotAccpModel>WEDESC}===null || ${oPilotAccpModel>WEDESC}==='')? ${oPilotAccpModel>ADPDESC}:${oPilotAccpModel>WEDESC}}"
									subTitle="{oPilotAccpModel>LTXT}" footerLeftInfo="Qty {oPilotAccpModel>TOTQTY}"
									footerRightInfo="{= ${oPilotAccpModel>ISSER}==='X'?'View':''}" class=" sapUiTinyMargin" press="onStationPress"
									fireSerialPress="onSerialNoPress">
									<core:Icon src="sap-icon://write-new-document" color="#0a6cd6"/>
									<core:Icon src="sap-icon://broken-link" visible="{= ${oPilotAccpModel>CONECT}!=='N'}"
										color="{path:'oPilotAccpModel>CONECT',formatter:'.formatter.wcStationColor'}" size="3rem"/>
								</cc:Station1>
							</items>
							<layoutData>
								<l:GridData span="XL12 L12 M12 S12"/>
							</layoutData>
						</FlexBox>
					</l:Grid>
					<Title text="Others" class="sapUiSmallMarginTop"/>
					<HBox items="{path:'oPilotAccpModel>/stns',filters:[{path:'STNMID',operator:'EQ',value1:'STNM_O'}]}">
						<cc:Others title="{oPilotAccpModel>STXT}" showButton="{oPilotAccpModel>HCFLAG}" press="onStationPress" count="{oPilotAccpModel>TOTQTY}"
							footerLeftInfo="Max {oPilotAccpModel>MAX}" class="sapUiSmallMargin">
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
						</cc:Others>
