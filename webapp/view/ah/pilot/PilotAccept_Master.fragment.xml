<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core"
	xmlns:filterbar="sap.ui.comp.filterbar">
	<List id="lstMasterApprovals" growingScrollToLoad="true" growing="true" includeItemInSelection="true" mode="SingleSelectMaster"
		growingThreshold="100" noDataText="No Data"
		items="{path : 'oPilotAccpModel>/PilotAcceptList' , sorter : { path : 'reftyp', descending: true,group : true}}"
		selectionChange="onListItemPress">
		<ObjectListItem icon="{oPilotAccpModel>Icon}" title="{oPilotAccpModel>ddesc}" type="{oPilotAccpModel>Type}" number="{oPilotAccpModel>value}"
			press="onListItemPress"></ObjectListItem>
	</List>
</core:FragmentDefinition>