<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:cs="avmet.ah.control" xmlns:mc="sap.suite.ui.microchart">
	<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTop">
		<l:VerticalLayout width="100%">
			<Title text="Fuel" class="sapUiTinyMarginBegin"/>
			<grid:CSSGrid items="{paModel>repl/fuel}" gridTemplateColumns="250px 250px 250px" gridTemplateRows="150px"
				gridGap="10px" modelContextChange="fnRemovePerFromRadial">
				<cs:FuelTile title="{paModel>resdescription}" showNote="{paModel>ShowNote}" count="{path:'paModel>totamt',formatter:'.formatter.formatMaxValue'}"
					unit="{paModel>units}" press="onReplBtnClk" maxCount="{paModel>max}" status="{paModel>defuel}"
					servicedCount="{path:'paModel>srvamt',formatter:'.formatter.formatMaxValue'}">
					<mc:RadialMicroChart tooltip=" "
						percentage="{parts : ['paModel>totamt','paModel>max'], formatter : '.formatter.FuelMC'}" size="M"
						valueColor="{parts : ['paModel>totamt','paModel>max'], formatter : '.formatter.FuelMCState'}" press="press"
						class="percentageHidden"></mc:RadialMicroChart>
					<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
					<core:Icon src="sap-icon://up" useIconTooltip="false" color="green" size="10px" press="onEditIconPress"/>
					<core:Icon src="sap-icon://down" useIconTooltip="false" color="red" size="10px" press="onEditIconPress"/>
				</cs:FuelTile>
			</grid:CSSGrid>
		</l:VerticalLayout>
		<l:VerticalLayout width="100%">
			<Title text="{i18n>oilandMisc}" class="sapUiTinyMarginBegin"/>
			<grid:CSSGrid items="{paModel>repl/oil}" gridTemplateColumns="220px 220px 220px 220px"
				gridTemplateRows="130px" gridGap="10px" modelContextChange="fnRemovePerFromRadial">
				<cs:FuelTile title="{paModel>resdescription}" showNote="{paModel>ShowNote}" count="{paModel>totamt}"
					unit="{paModel>units}" press="onReplBtnClk" maxCount="{paModel>max}" status="{paModel>defuel}"
					servicedCount="{paModel>srvamt}">
					<mc:RadialMicroChart tooltip=" "
						percentage="{parts : ['paModel>totamt','paModel>max'], formatter : '.formatter.FuelMC'}" size="M"
						valueColor="{parts : ['paModel>totamt','paModel>max'], formatter : '.formatter.FuelMCState'}" press="press"
						class="percentageHidden"></mc:RadialMicroChart>
					<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
					<core:Icon src="sap-icon://up" useIconTooltip="false" color="green" size="10px" press="onEditIconPress"/>
					<core:Icon src="sap-icon://down" useIconTooltip="false" color="red" size="10px" press="onEditIconPress"/>
				</cs:FuelTile>
			</grid:CSSGrid>
		</l:VerticalLayout>
	</VBox>
</core:FragmentDefinition>