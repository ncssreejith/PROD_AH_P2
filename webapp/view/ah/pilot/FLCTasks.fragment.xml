<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cs="avmet.ah.control" xmlns:l="sap.ui.layout"
	xmlns:mc="sap.suite.ui.microchart" xmlns:grid="sap.ui.layout.cssgrid">
	<VBox class="WhiteVBox sapUiTinyMargin">
		<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
			<items>
				<Text class="PDSFragTitle" text="{i18n>flctask}"/>
				<!--<Button text="Reviewed" type="Emphasized" press="onReviewedPress" enabled="{= ${oPilotAccpModel>/FLCTaskReviewBtn} ? true : false}"/>-->
				<Button text="Reviewed" type="Emphasized" id="flcReviewBtnId" press="onReviewedPress"/>
			</items>
		</FlexBox>
		<!--<FlexBox class="flcTaskSignoffHBox sapUiSmallMargin" alignItems="Center" justifyContent="Center">-->
		<!--	<items>-->
		<!--		<core:Icon src="sap-icon://accept" color="white" size="15px" class="sapUiTinyMarginTop"/>-->
		<!--		<Text text="Benjamin Lam" class="sapUiTinyMarginBegin flcWhiteFont flcBoldFont"/>-->
		<!--		<Text text="signed at DD/MM/YYYY, HH:MM" class="sapUiTinyMarginBegin flcWhiteFont"/>-->
		<!--	</items>-->
		<!--</FlexBox>-->
		<HBox>
			<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTop">
				<l:VerticalLayout width="100%">
					<Title text="Fuel" class="sapUiTinyMarginBegin"/>
					<grid:CSSGrid items="{oPilotAccpModel>/Fuel}" id="FuleTilesHBoxId" gridTemplateColumns="250px 250px 250px" gridTemplateRows="150px"
						gridGap="0rem">
						<cs:FuelTile title="{oPilotAccpModel>resdescription}" showNote="{oPilotAccpModel>ShowNote}" count="{oPilotAccpModel>totamt}"
							unit="{oPilotAccpModel>units}" press="onReplBtnClk" maxCount="{oPilotAccpModel>max}" status="{oPilotAccpModel>defuel}"
							servicedCount="{oPilotAccpModel>srvamt}">
							<mc:RadialMicroChart tooltip=" "
								percentage="{parts : ['oPilotAccpModel>totamt','oPilotAccpModel>max'], formatter : 'avmet.ah.model.formatter.FuelMC'}" size="M"
								valueColor="{parts : ['oPilotAccpModel>totamt','oPilotAccpModel>max'], formatter : 'avmet.ah.model.formatter.FuelMCState'}" press="press"
								class="percentageHidden"></mc:RadialMicroChart>
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
							<core:Icon src="sap-icon://up" color="green" size="10px" press="onEditIconPress"/>
							<core:Icon src="sap-icon://down" color="red" size="10px" press="onEditIconPress"/>
						</cs:FuelTile>
					</grid:CSSGrid>
				</l:VerticalLayout>
				<!--<l:VerticalLayout width="100%" class="sapUiSmallMarginTop" visible="{path :'oPilotAccpModel>/srvtid', formatter : '.formatter.ShowTire'}">
					<Title text="Tire" class="sapUiTinyMarginBegin"/>
					<grid:CSSGrid class="sapUiTinyMarginBegin sapUiTinyMarginTop" items="{oPilotAccpModel>/Tire}" gridTemplateColumns="220px 220px 220px 220px"
						gridTemplateRows="130px" gridGap="0rem">
						<cs:Others title="{oPilotAccpModel>resdescription}" press="onReplBtnClk" subTitle="" count="{oPilotAccpModel>totamt}"
							footerLeftInfo="Max {oPilotAccpModel>max}">
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onIconPress"/>
						</cs:Others>
					</grid:CSSGrid>
				</l:VerticalLayout>-->
				<l:VerticalLayout width="100%">
					<Title text="{i18n>oilandMisc}" class="sapUiTinyMarginBegin"/>
					<grid:CSSGrid items="{oPilotAccpModel>/OilMisc}" id="OilTilesHBoxId" gridTemplateColumns="220px 220px 220px 220px" gridTemplateRows="130px"
						gridGap="0rem">
						<cs:FuelTile title="{oPilotAccpModel>resdescription}" showNote="{oPilotAccpModel>ShowNote}" count="{oPilotAccpModel>srvamt}"
							unit="{oPilotAccpModel>units}" press="onReplBtnClk" maxCount="{oPilotAccpModel>max}" status="{oPilotAccpModel>defuel}"
							servicedCount="{oPilotAccpModel>srvamt}">
							<mc:RadialMicroChart tooltip=" " percentage="{parts : ['oPilotAccpModel>srvamt','oPilotAccpModel>max'], formatter : '.formatter.FuelMC'}"
								size="M" valueColor="{parts : ['oPilotAccpModel>srvamt','oPilotAccpModel>max'], formatter : '.formatter.FuelMCState'}" press="press"
								class="percentageHidden"></mc:RadialMicroChart>
							<core:Icon src="sap-icon://write-new-document" color="#0a6cd6" press="onEditIconPress"/>
							<core:Icon src="sap-icon://up" color="green" size="10px" press="onEditIconPress"/>
							<core:Icon src="sap-icon://down" color="red" size="10px" press="onEditIconPress"/>
						</cs:FuelTile>
					</grid:CSSGrid>
				</l:VerticalLayout>
			</VBox>
		</HBox>
		<VBox visible="{=${PDSPilotModel>/ViewName} === 'PDS' ? true : false}">
			<!--<core:Fragment fragmentName="avmet.ah.view.ah.pdsic.RoutineTasks" type="XML"/>-->
			<!--<core:Fragment fragmentName="avmet.ah.view.ah.pdsic.Follow-UpTasks" type="XML"/>-->
			<core:Fragment fragmentName="avmet.ah.view.ah.pilot.RoutineTasks" type="XML"/>
			<!--<core:Fragment fragmentName="avmet.ah.view.ah.pilot.Follow-UpTasks" type="XML"/>
			<core:Fragment fragmentName="avmet.ah.view.ah.pilot.CreateTasks" type="XML"/>-->
		</VBox>
	</VBox>
</core:FragmentDefinition>