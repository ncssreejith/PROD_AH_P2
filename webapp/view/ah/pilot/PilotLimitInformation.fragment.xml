<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:u="sap.ui.unified" xmlns:f="sap.f" xmlns:card="sap.f.cards">
	<Dialog showHeader="false" horizontalScrolling="false" draggable="true" contentWidth="80%">
		<content>
			<VBox class="sapUiSmallMarginTop">
				<OverflowToolbar class="headerHeight">
					<ObjectIdentifier title="{i18n>titleDefectInfo}" text="{CapSet>/JOBDESC}" titleActive="false" class="sapUiSmallMarginBegin"/>
				</OverflowToolbar>
				<VBox class="sapUiSmallMarginBegin">
					<HBox>
						<Label design="Bold" class="sapUiTinyMargin" text="{i18n>lblJobNo}" width="150px"/>
						<Text text="{CapSet>/JOBID}" class="sapUiTinyMargin" width="200px"/>
					</HBox>
					<HBox>
						<Label design="Bold" class="sapUiTinyMargin" text="{i18n>lblFoundDur}" width="150px"/>
						<Text text="{path:'CapSet>/FNDID', formatter:'.formatter.fndIdFormatter'}" width="200px" class="sapUiTinyMargin"/>
					</HBox>
					<HBox>
						<Label design="Bold" class="sapUiTinyMargin" text="{i18n>lblFoundBy}" width="150px"/>
						<Text text="{CapSet>/SUBUSR}" class="sapUiTinyMargin" width="200px"/>
					</HBox>
				</VBox>
				<ObjectIdentifier title="{path:'oFlagModel>/FLag', formatter:'.formatter.LimOverViewText'}" titleActive="false" class="sapUiSmallMargin"/>
				<HBox width="100%" visible="{=${CapSet>/CAPTY}==='A' || ${CapSet>/CAPTY}==='L' ? true :false}">
					<core:Fragment fragmentName="avmet.ah.view.ah.pilot.ADDLimitInformation" type="XML"/>
				</HBox>
				<HBox width="100%" visible="{=${CapSet>/CAPTY}==='B' ? true :false}">
					<core:Fragment fragmentName="avmet.ah.view.ah.pilot.LimitADDBothInformation" type="XML"/>
				</HBox>
			</VBox>
			<OverflowToolbar class="sapUiSmallMarginBottom toolbarBorder">
				<ToolbarSpacer/>
				<Button width="6rem" text="{i18n>btnCancel}" press="onCloseLimitDetailDialog" type="Default" class="btnClass"></Button>
			</OverflowToolbar>
		</content>
	</Dialog>
</core:FragmentDefinition>