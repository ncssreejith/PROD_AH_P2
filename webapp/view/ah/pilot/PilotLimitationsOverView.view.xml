<mvc:View controllerName="avmet.ah.controller.PilotLimitationsOverView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Page showHeader="false" class="whiteToolBar">
		<subHeader >
			<OverflowToolbar  design="Solid">
				<Button icon="sap-icon://arrow-left" press="onNavBack" class="sapUiSmallMarginBegin"/>
				<ObjectIdentifier title="Limitations" titleActive="false" class="sapUiTinyMarginBegin"/>
				<ToolbarSpacer/>
				<Button text="Managed Limitation" type="Ghost" icon="sap-icon://megamenu" iconFirst="false" class="btnClass" press="onMangeAdd"></Button>
				<Button type="Emphasized" text="{i18n>btnSTartRec}" press="onStartRect"></Button>
			</OverflowToolbar>
		</subHeader>
		<content>
			<VBox class="sapUiResponsivePadding sapUiResponsiveMargin">
				<l:Splitter>
					<VBox backgroundDesign="Solid">
						<core:Fragment fragmentName="avmet.ah.view.ah.limitations.DefectInformation" type="XML"/>
						<layoutData>
							<l:SplitterLayoutData size="35%" resizable="false"/>
						</layoutData>
					</VBox>
					<VBox backgroundDesign="Solid" class="sapUiSmalMarginBegin">
						<core:Fragment fragmentName="avmet.ah.view.ah.limitations.LimitInformation" type="XML"/>
						<layoutData>
							<l:SplitterLayoutData size="auto"/>
						</layoutData>
					</VBox>
				</l:Splitter>
			</VBox>
		</content>
	</Page>
</mvc:View>