<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Table class="CERTable sapUiSmallMargin" width="97%" items="{oPilotAccpModel>/FollowUpTasks}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Follow-Up Tasks" level="H1"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column class="CERTableTextColor">
				<Label text="Symbol" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Task" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Technical Order" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Tradesman" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Supervisor" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Date/ Time (Close)" design="Bold" wrapping="true"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<core:Icon src="sap-icon://decline" size="30px" color="#da2d2d"/>
					<Text text="{oPilotAccpModel>ftdesc}" wrapping="true"/>
					<Text text="{oPilotAccpModel>toref}"/>
					<Text text="{oPilotAccpModel>sg1usr}"/>
					<Text text="{oPilotAccpModel>sg2usr}"/>
					<Text
						text="{path:'oPilotAccpModel>sg2dtm', formatter:'.formatter.defaultDateFormatDisplay'},{path:'oPilotAccpModel>sg2uzt', formatter:'.formatter.defaultTimeFormatDisplay'}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>