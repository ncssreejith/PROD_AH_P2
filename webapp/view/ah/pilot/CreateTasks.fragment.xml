<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Table class="CERTable sapUiSmallMargin" width="97%" items="{oPilotAccpModel>/CompletedTasks}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Tasks" level="H1"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column class="CERTableTextColor">
				<Label text="Symbol" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Task" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Date / Time" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Follow-up Task" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Tradesman" design="Bold" wrapping="true"/>
			</Column>
			<Column demandPopin="true">
				<Label text="Supervisor" design="Bold" wrapping="true"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<core:Icon src="sap-icon://decline" size="30px" color="#da2d2d"/>
					<Text text="{oPilotAccpModel>tdesc}" wrapping="true"/>
					<Text
						text="{path:'oPilotAccpModel>SG2DTM', formatter:'.formatter.defaultDateFormatDisplay'} {path:'oPilotAccpModel>SG2UZT', formatter:'.formatter.defaultTimeFormatDisplay'}"/>
					<Text text="{oPilotAccpModel>ftdesc}" wrapping="true"/>
					<Text text="{oPilotAccpModel>SG1USR}"/>
					<Text text="{oPilotAccpModel>SG2USR}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>