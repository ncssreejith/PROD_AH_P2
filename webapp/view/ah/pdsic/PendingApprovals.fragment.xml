<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar"
	xmlns:f="sap.f" xmlns:tnt="sap.tnt">
	<VBox class="WhiteVBox sapUiTinyMargin" height="450px">
		<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
			<items>
				<Text class="PDSFragTitle" text="Pending Approvals"/>
				<Button text="Reviewed" id="btnPendApprReview" type="Emphasized" press="onReviewedPress"/>
			</items>
		</FlexBox>
		<List id="lstPendApprovals" growingScrollToLoad="true" growing="true" includeItemInSelection="true" mode="SingleSelectMaster"
			ugrowingThreshold="100" noDataText="No Data" items="{oPDSSummaryViewModel>/aPendApprovals}" selectionChange="onApprovalDetails"
			updateFinished="onApprovalUpdateFinished">
			<CustomListItem>
				<VBox class="sapUiSmallMargin">
					<HBox>
						<Text text="{path:'oPDSSummaryViewModel>capdt', formatter:'.formatter.defaultDateFormatDisplay'}"/>
						<Text text="{path:'oPDSSummaryViewModel>captm', formatter:'.formatter.defaultTimeFormatDisplay'}" class="sapUiTinyMarginBegin"/>
					</HBox>
					<HBox justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
						<Label wrapping="true" text="{oPDSSummaryViewModel>description}" design="Bold" width="20rem"/>
						<core:Icon src="sap-icon://navigation-right-arrow"/>
					</HBox>
					<HBox class="sapUiTinyMarginTop">
						<!--	<tnt:InfoLabel text="{ApprovalListModel>text}" renderMode="Narrow" colorScheme="7" displayOnly="true"/>
					<tnt:InfoLabel text="Limitation" class="sapUiTinyMarginBegin" renderMode="Narrow" colorScheme="6" displayOnly="true"
						visible="{= ${ApprovalListModel>flag}==='L' ? true:false}"/>-->
						<tnt:InfoLabel text="{path:'oPDSSummaryViewModel>flag', formatter:'.formatter.approvalMasterText'}" renderMode="Narrow" colorScheme="7"
							displayOnly="true"/>
					</HBox>
				</VBox>
			</CustomListItem>
		</List>
	</VBox>
</core:FragmentDefinition>