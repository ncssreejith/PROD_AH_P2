<mvc:View controllerName="avmet.ah.controller.PDSSummary" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<Page id="page" title="Certificate of Serviceability" showFooter="true" showNavButton="true" enableScrolling="true"
		navButtonPress="onNavBack">
		<content>
			<VBox backgroundDesign="Transparent" height="100%">
				<l:Splitter height="530px">
					<VBox height="100%" backgroundDesign="Solid">
						<core:Fragment fragmentName="avmet.ah.view.ah.pdsic.PDS_Master" type="XML"/>
						<layoutData >
							<l:SplitterLayoutData size="350px" resizable="false"/>
						</layoutData>
					</VBox>
					<VBox>
						<core:Fragment fragmentName="avmet.ah.view.ah.pdsic.PDS_Details" type="XML"/>
						<layoutData>
							<l:SplitterLayoutData size="auto"/>
						</layoutData>
					</VBox>
				</l:Splitter>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Back" press="onNavBack"/>
				<Button text="Sign Off" press="onPresSignOff" type="Emphasized" id="signOffBtnId"></Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>