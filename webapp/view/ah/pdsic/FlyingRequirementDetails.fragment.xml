<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<VBox class="WhiteVBox sapUiTinyMargin" height="450px">
		<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
			<items>
				<Text class="PDSFragTitle" text="Flying Requirements"/>
				<Button text="Reviewed" id="btnFlyReqReview"  type="Emphasized" press="onReviewedPress"/>
			</items>
		</FlexBox>
		<Table class="sapUiResponsivePadding CERTable sapUiSizeCompact" width="98%" items="{oPDSSummaryViewModel>/aFlyReq}">
			<headerToolbar>
				<OverflowToolbar>
					<content>
						<ToolbarSpacer/>
						<!--<SearchField width="30%"/>-->
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="15%" class="CERTableTextColor">
					<header>
						<Label text="Date / Time" design="Bold"/>
					</header>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<header>
						<Label text="Flying Requirements" design="Bold"/>
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Active">
					<cells>
						<Text text="{oPDSSummaryViewModel>begda}"/>
						<Text text="{oPDSSummaryViewModel>frdesc}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</VBox>
</core:FragmentDefinition>