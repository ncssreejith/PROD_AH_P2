<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<VBox class="WhiteVBox sapUiTinyMargin" height="450px">
		<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
			<items>
				<Text class="PDSFragTitle" text="Aircraft Monitoring"/>
				<Button text="Reviewed" id="btnSortieReview" type="Emphasized" press="onReviewedPress"/>
			</items>
		</FlexBox>
		<Table class="CERTable sapUiSmallMargin" width="98%" items="{oPDSSummaryViewModel>/Sortie}">
			<headerToolbar>
				<OverflowToolbar>
					<content>
						<ToolbarSpacer/>
						<!--<SearchField width="30%"/>-->
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column class="CERTableTextColor">
					<Label text="Date / Time" design="Bold"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="Aircraft Monitoring" design="Bold"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="No. of Sorties" design="Bold"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="Tradesman" design="Bold"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Navigation" press="onClickSortieDetails">
					<cells>
						<Text
							text="{path:'oPDSSummaryViewModel>SORDT', formatter:'.formatter.defaultDateFormatDisplay'} {path:'oPDSSummaryViewModel>SORTM', formatter:'.formatter.defaultTimeFormatDisplay'}"/>
						<Text text="{oPDSSummaryViewModel>SORDESC}"/>
						<Text text="{oPDSSummaryViewModel>SORCNT}"/>
						<Text text="{oPDSSummaryViewModel>SG1USR}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</VBox>
</core:FragmentDefinition>