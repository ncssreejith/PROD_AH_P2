<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cs="avmet.ah.control" xmlns:tnt="sap.tnt">
	<VBox class="WhiteVBox sapUiTinyMargin">
		<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
			<items>
				<Text class="PDSFragTitle" text="Acceptable Deferred Defects"/>
				<Button text="Reviewed" id="btnADDReview" type="Emphasized" press="onReviewedPress"/>
			</items>
		</FlexBox>
		<FlexBox direction="Column" alignItems="Center" class="sapUiSmallMarginTop">
			<items>
				<VBox>
					<VBox justifyContent="Center" class="sapUiSmallMarginBegin">
						<core:HTML id="topId" visible="true"
							content='&lt;canvas id=&quot;myCanvasTop&quot; click="getPointPosition($event)" width=&quot;340&quot; height=&quot;140&quot; style=&quot;border:1px solid #000000&quot;&gt;&lt;/canvas&gt;'></core:HTML>
						<core:HTML id="FrontId" visible="true"
							content='&lt;canvas id=&quot;myCanvasFront&quot; click="getPointPosition($event)" width=&quot;340&quot; height=&quot;140&quot; style=&quot;border:1px solid #000000&quot;&gt;&lt;/canvas&gt;'></core:HTML>
						<core:HTML id="LeftId" visible="true"
							content='&lt;canvas id=&quot;myCanvasLeft&quot; click="getPointPosition($event)" width=&quot;340&quot; height=&quot;140&quot; style=&quot;border:1px solid #000000&quot;&gt;&lt;/canvas&gt;'></core:HTML>
						<core:HTML id="RightId" visible="true"
							content='&lt;canvas id=&quot;myCanvasRight&quot; click="getPointPosition($event)" width=&quot;340&quot; height=&quot;140&quot; style=&quot;border:1px solid #000000&quot;&gt;&lt;/canvas&gt;'></core:HTML>
					</VBox>
					<SegmentedButton id="sbDfArea" class="sapUiSmallMarginBegin" selectionChange="onSelectionDefectAreaChange">
						<items>
							<SegmentedButtonItem text="Top" key="ND" width="4rem" visible="false"/>
							<SegmentedButtonItem text="Top" key="DEA_T" width="4rem"/>
							<SegmentedButtonItem text="Front" key="DEA_F" width="5rem"/>
							<SegmentedButtonItem text="Left" key="DEA_l" width="4rem"/>
							<SegmentedButtonItem text="Right" key="DEA_R" width="4rem"/>
						</items>
					</SegmentedButton>
				</VBox>
				<List width="42rem" items="{ path: 'oPDSSummaryViewModel>/aDefferedDefects'}" class="sapUiSmallMargin hboxColor">
					<CustomListItem class="sapUiSmallMargin hboxColor" type="Navigation" press="onLimitationInformationPress($event,'ADD')">
						<HBox class="sapUiResponsivePadding">
							<!--	<f:Avatar initials="A" displaySize="XS" backgroundColor="Accent5" class="avtarRadius sapUiTinyMargin"/>-->
							<cs:ColorStatus title="{oPDSSummaryViewModel>NAME1}" status="{oPDSSummaryViewModel>CFLAG}" statushr="{oPDSSummaryViewModel>AFHR}"/>
							<HBox class="sapUiSmallMargin" alignContent="Center" alignItems="Center">
								<VBox alignContent="Center" alignItems="Center" visible="{=${oPDSSummaryViewModel>EXPDT} !== null ? true : false}">
									<Label text="{oPDSSummaryViewModel>AFDAY}" design="Bold"></Label>
									<Label text="days left"></Label>
								</VBox>
								<VBox alignContent="Center" alignItems="Center" class="sapUiSmallMarginBegin" visible="{=${oPDSSummaryViewModel>AFHR} !== null ? true : false}">
									<Label text="{oPDSSummaryViewModel>AFHR}" design="Bold"></Label>
									<Label text="{oPDSSummaryViewModel>UTIL1}"  visible="{=${oPDSSummaryViewModel>UTIL1_10} !== null ? true : false}"></Label>
									<Label text="{oPDSSummaryViewModel>UTIL1} left" visible="{=${oPDSSummaryViewModel>UTIL1_10} === null ? true : false}"></Label>
									
								</VBox>
							</HBox>
							<HBox class="sapUiSmallMargin">
								<VBox>
									<Label text="{oPDSSummaryViewModel>JOBDESC}" design="Bold"/>
									<VBox visible="{= ${oPDSSummaryViewModel>CAPTY} === 'A'|| ${oPDSSummaryViewModel>CAPTY} === 'B'}">
										<tnt:InfoLabel text="Limitation" renderMode="Narrow" visible="{= ${oPDSSummaryViewModel>LDESC} !== null}" colorScheme="7" class="sapUiTinyMarginTop"
											displayOnly="true"/>
										<Label text="{oPDSSummaryViewModel>LDESC}" class="sapUiTinyMargin" wrapping="true" width="20rem" visible="{= ${oPDSSummaryViewModel>LDESC} !== null}"/>
									</VBox>
								</VBox>
							</HBox>
						</HBox>
					</CustomListItem>
				</List>
			</items>
		</FlexBox>
	</VBox>
</core:FragmentDefinition>