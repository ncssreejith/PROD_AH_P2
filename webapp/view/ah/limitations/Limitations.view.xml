<mvc:View controllerName="avmet.ah.controller.Limitations" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page showNavButton="true" title="{i18n>titleAircraftCap}" navButtonPress="onNavBack">
		<content>
			<IconTabBar id="idIconTabBarNoIcons" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding iconTabBarText">
				<items>
					<IconTabFilter text="{i18n>lblADD}">
						<core:Fragment fragmentName="avmet.ah.view.ah.limitations.ADDDefectForm" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="{i18n>lblLimitations}">
						<core:Fragment fragmentName="avmet.ah.view.ah.limitations.ADDLimitationForm" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="{i18n>lblCmpltLimit}">
						<core:Fragment fragmentName="avmet.ah.view.ah.limitations.ADDCompleteLimitationForm" type="XML"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>