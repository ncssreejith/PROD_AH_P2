<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="avmet.ah.controller.OFPUpdateView"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Aircraft OFP" navButtonPress="onNavBack" showNavButton="true">
				<content>
					<VBox class="sapUiSmallMargin">
						<Table id="tblUpOFP" columns="{oOFPModel>/ofp}" class="TableHeaderBGColor">
							<columns>
								<Column class="TableTextColor" hAlign="Center" width="20%">
									<Label text="{oOFPModel>coltxt}" wrapping="true" design="Bold"/>
								</Column>
							</columns>
						</Table>
					</VBox>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<!--<Button text="Back" press="onNavBack"></Button>-->
						<Button text="Sign Off" type="Emphasized" press="onSignOffPress"></Button>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>