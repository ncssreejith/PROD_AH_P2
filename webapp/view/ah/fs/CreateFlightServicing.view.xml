<mvc:View controllerName="avmet.ah.controller.CreateFlightServicing" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:ct="avmet.ah.control">
	<Page title="Create Flight Servicing" enableScrolling="true" showNavButton="true" navButtonPress="onNavBack">
		<ScrollContainer height="100%" vertical="true" focusable="true">
			<content>
				<l:VerticalLayout class="sapUiSmallMargin backgroundBlue">
					<l:content>
						<Toolbar>
							<Title text="Select a Servicing"></Title>
						</Toolbar>
						<VBox items="{path : 'oCreatFlightSerModel>/aCreateFlgSrv' , sorter : { path : 'description', descending: true}}">
							<l:Grid >
								<VBox>
									<ct:HeaderCard title="{oCreatFlightSerModel>description}"/>
								</VBox>
								<!--<l:Grid >-->
								<FlexBox wrap="Wrap" items="{oCreatFlightSerModel>subsrv}">
									<items>
										<ct:IconHeaderCard title="{oCreatFlightSerModel>description}" press="onFlightServiceTilePress"
											class="sapUiSmallMarginEnd" hoverOut="onCardHoverOut" hover="onCardHover">
											<Image src="{oCreatFlightSerModel>ImgSrc}"/>
										</ct:IconHeaderCard>
									</items>
									<layoutData>
										<l:GridData span="XL9 L9 M9 S9"/>
									</layoutData>
								</FlexBox>
							</l:Grid>
						</VBox>
						<!--<core:Fragment fragmentName="avmet.ah.fragments.createflight.FlightServicing" type="XML"/>-->
						<!--<Toolbar></Toolbar>-->
						<!--<core:Fragment fragmentName="avmet.ah.fragments.createflight.AdhocServicing" type="XML"/>-->
					</l:content>
				</l:VerticalLayout>
			</content>
		</ScrollContainer>
	</Page>
</mvc:View>