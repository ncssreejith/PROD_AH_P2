<mvc:View controllerName="avmet.ah.controller.RoleChange" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
	<Page title="Role Change" showFooter="{= ${rcModel>/mode}!==0}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<VBox justifyContent="Center">
				<IconTabBar id="idIconTabBar" select="onTabChangeSel" selectedKey="{rcModel>/selTab}">
					<items>
						<IconTabFilter text="Tradesman" key="rc1">
							<VBox>
								<HBox class="sapUiTinyMarginBottom" visible="{parts:['rcModel>/selTab','rcModel>/selStn/tsign'],formatter:'.formatter.fsRCUnSignOff'}"
									width="100%" height="2rem" justifyContent="Center" alignContent="Center" alignItems="Center">
									<HBox class="topSignOff sapUiSmallMargin" width="95%" height="2rem" justifyContent="Center" alignContent="Center" alignItems="Center">
										<Link class="sapUiTinyMarginTop" text="{rcModel>/selStn/tsign} sign off for {rcModel>/selStn/L_TXT}: Undo SignOff"
											press="onStationUndoSignOff"/>
									</HBox>
								</HBox>
								<HBox class="wcVBox">
									<core:Fragment fragmentName="avmet.ah.view.ah.fs.rolechange.RCStationAdapter" type="XML"/>
									<core:Fragment fragmentName="avmet.ah.view.ah.fs.rolechange.RCGraph" type="XML"/>
								</HBox>
							</VBox>
						</IconTabFilter>
						<IconTabFilter text="Supervisor" key="rc2">
							<VBox>
								<HBox class="sapUiTinyMarginBottom" visible="{parts:['rcModel>/selTab','rcModel>tsign'],formatter:'.formatter.fsRCUnSignOff'}" width="100%" height="2rem" justifyContent="Center" alignContent="Center" alignItems="Center">
									<HBox class="topSignOff sapUiSmallMargin" width="95%" height="2rem" justifyContent="Center" alignContent="Center" alignItems="Center">
										<Link class="sapUiTinyMarginTop" text="Supervisor sign off for  {rcModel>/selStn/L_TXT}" press="onStationSignOff"/>
									</HBox>
								</HBox>
								<HBox class="wcVBox">
									<core:Fragment fragmentName="avmet.ah.view.ah.fs.rolechange.RCStationAdapter" type="XML"/>
									<core:Fragment fragmentName="avmet.ah.view.ah.fs.rolechange.RCGraph" type="XML"/>
								</HBox>
							</VBox>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Back" press="onNavBack"/>
				<Button text="{parts:['rcModel>/tsign','rcModel>/selTab'],formatter:'.formatter.rcSignBtn'}"
					visible="{= !(!${rcModel>/tsign} &amp;&amp; ${rcModel>/selTab}==='rc2')}" type="Emphasized" press="onStationSignOff"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>