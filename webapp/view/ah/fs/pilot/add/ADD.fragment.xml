<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cs="avmet.ah.control" xmlns:tnt="sap.tnt">
	<Page id="T4_ADD" showFooter="true">
		<content>
			<VBox class="WhiteVBox sapUiTinyMargin">
				<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
					<items>
						<Text class="PDSFragTitle" text="Acceptable Deferred Defects"/>
						<Button text="{path:'paModel>reviewd',formatter:'.formatter.reviewedStatusTxt'}" type="Emphasized" enabled="{= !${paModel>reviewd}}" press="onReviewedPress"/>
					</items>
				</FlexBox>
				<FlexBox direction="Column" alignItems="Center" class="sapUiSmallMarginTop">
					<items>
						<VBox alignItems="Center">
							<VBox justifyContent="Center" alignContent="Center" alignItems="Center" class="sapUiSmallMarginBegin">
								<core:HTML
									content='&lt;canvas id="myCanvas" click="getPointPosition($event)" width="370" height="180" style="border: 1px solid rgb(0, 0, 0); background-repeat: no-repeat; background-size: 100%; background-image: url(&amp;quot;./css/img/AH/AH-Top.png&amp;quot;);" data-sap-ui-preserve="__html0"&gt;&lt;/canvas&gt;'></core:HTML>
							</VBox>
							<SegmentedButton class="sapUiSmallMarginBegin" items="{paModel>/defectArea}" selectedKey="{paModel>/addViewSel}"
								selectionChange="onSelectionDefectAreaChange">
								<items>
									<SegmentedButtonItem text="{paModel>text}" key="{paModel>key}" width="5rem"/>
								</items>
							</SegmentedButton>
						</VBox>
						<List items="{ path: 'paModel>add'}" class="sapUiSmallMargin hboxColor">
							<CustomListItem class="sapUiSmallMargin hboxColor" type="Navigation" press="onADDLimitationItemPress">
								<HBox class="sapUiResponsivePadding">
									<!--	<f:Avatar initials="A" displaySize="XS" backgroundColor="Accent5" class="avtarRadius sapUiTinyMargin"/>-->
									<cs:ColorStatus title="{paModel>NAME1}" status="{paModel>CFLAG}" statushr="{paModel>AFHR}"/>
									<HBox class="sapUiSmallMargin" alignContent="Center" alignItems="Center">
										<VBox alignContent="Center" alignItems="Center" visible="{=${paModel>EXPDT} !== null ? true : false}">
											<Label text="{paModel>AFDAY}" design="Bold"></Label>
											<Label text="days left"></Label>
										</VBox>
										<VBox alignContent="Center" alignItems="Center" class="sapUiSmallMarginBegin" visible="{=${paModel>AFHR} !== null ? true : false}">
											<Label text="{paModel>AFHR}" design="Bold"></Label>
											<Label text="{paModel>UTIL1}" visible="{=${paModel>UTIL1_10} !== null ? true : false}"></Label>
											<Label text="{paModel>UTIL1} left" visible="{=${paModel>UTIL1_10} === null ? true : false}"></Label>
										</VBox>
									</HBox>
									<HBox class="sapUiSmallMargin">
										<VBox>
											<Label text="{paModel>JOBDESC}" design="Bold"/>
											<VBox visible="{= ${paModel>CAPTY} === 'A'|| ${paModel>CAPTY} === 'B'}">
												<tnt:InfoLabel text="Limitation" renderMode="Narrow" visible="{= ${paModel>LDESC} !== null}" colorScheme="7"
													class="sapUiTinyMarginTop" displayOnly="true"/>
												<Label text="{paModel>LDESC}" class="sapUiTinyMargin" wrapping="true" width="20rem" visible="{= ${paModel>LDESC} !== null}"/>
											</VBox>
										</VBox>
									</HBox>
								</HBox>
							</CustomListItem>
						</List>
					</items>
				</FlexBox>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Back" press="onNavBack"/> 				<Button text="Reject" type="Reject" press="onRejectPress"/>
				<Button text="Sign Off" press="onPresSignOff" enabled="{paModel>/enableSign}" type="Emphasized"></Button>
			</OverflowToolbar>
		</footer>
	</Page>
</core:FragmentDefinition>