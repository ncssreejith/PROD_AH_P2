<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Page id="T5_FREQ">
		<content>
			<VBox class="WhiteVBox sapUiTinyMargin" height="450px">
				<FlexBox alignItems="Start" justifyContent="SpaceBetween" class="sapUiSmallMargin">
					<items>
						<Text class="PDSFragTitle" text="Flying Requirements"/>
						<Button text="{path:'paModel>reviewd',formatter:'.formatter.reviewedStatusTxt'}" type="Emphasized" enabled="{= !${paModel>reviewd}}" press="onReviewedPress"/>
					</items>
				</FlexBox>
				<Table class="sapUiResponsivePadding CERTable sapUiSizeCompact" width="98%" items="{paModel>flyReq}">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<ToolbarSpacer/>
								<!--<SearchField width="30%"/>-->
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column width="25%" class="CERTableTextColor">
							<header>
								<Label text="Date / Time" design="Bold"/>
							</header>
						</Column>
						<Column demandPopin="true" minScreenWidth="Tablet">
							<header>
								<Label text="Flying Requirements" design="Bold"/>
							</header>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Active">
							<cells>
								<Text
									text="{path:'paModel>FR_DT', formatter:'.formatter.defaultDateFormatDisplay'} {path:'paModel>FR_TM', formatter:'.formatter.defaultTimeFormatDisplay'}"/>
								<Text text="{paModel>frdesc}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</content>
			<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Back" press="onNavBack"/> 				<Button text="Reject" visible="{= (${avmetModel>/runningChange/length} > 0 ) ? false : true}"  type="Reject" press="onRejectPress"/>
				<Button text="Sign Off" press="onPresSignOff" enabled="{paModel>/enableSign}" type="Emphasized"></Button>
			</OverflowToolbar>
		</footer>
	</Page>
</core:FragmentDefinition>