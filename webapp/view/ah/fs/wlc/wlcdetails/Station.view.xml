<mvc:View controllerName="avmet.ah.controller.Station" xmlns="sap.m" xmlns:semantic="sap.f.semantic" xmlns:mvc="sap.ui.core.mvc"
	xmlns:si="sap.suite.ui.commons.statusindicator" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Page title="Weapon configuration details" showFooter="true" showNavButton="true" busy="{viewModel>/busy}"
		busyIndicatorDelay="{viewModel>/delay}" navButtonPress="onNavBack">
		<content>
			<HBox justifyContent="Center">
				<HBox class="sapUiMediumMarginTop wcVBox" width="94%" height="32rem">
					<HBox width="16%">
						<ScrollContainer height="28rem" width="100%" vertical="true" focusable="true">
							<List width="12rem" growing="true" growingScrollToLoad="true" growingThreshold="10" items="{ path:'configModel>/stns'}"
								mode="SingleSelectMaster" selectionChange="onSelectionChange" updateFinished=".onUpdateFinished">
								<!--<StandardListItem type="Active" -->
								<!--selected="{= (${configModel>/selStn/STNSID}===${configModel>STNSID} &amp;&amp; ${configModel>/selStn/STNMID}===${configModel>STNMID})}"-->
								<!--title="{configModel>LTXT}"/>-->
								<CustomListItem
									selected="{= (${configModel>/selStn/STNSID}===${configModel>STNSID} &amp;&amp; ${configModel>/selStn/STNMID}===${configModel>STNMID})}">
									<HBox height="2.7rem" alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginEnd">
										<Text height="100%" text="{configModel>LTXT}"/>
										<!--<core:Icon src="sap-icon://attachment-photo" visible="{= (${configModel>/selStn/selADP/selWpn}===${configModel>selADP/selWpn/WESID} &amp;&amp; ${configModel>/selStn/selADP/selWpn/WEMID}===${configModel>selADP/selWpn/WEMID})? true:false}"/>-->
									</HBox>
								</CustomListItem>
							</List>
						</ScrollContainer>
					</HBox>
					<HBox class="sapUiSmallMarginBegin" width="16%">
						<ScrollContainer height="28rem" width="100%" vertical="true" focusable="true">
							<List width="12rem" mode="SingleSelectMaster" selectionChange="onMissileSelectChange"
								items="{ path: 'configModel>/selStn/selADP/wpn', sorter: { path: 'WEMDESC', descending: false, group: true }, groupHeaderFactory: '.getGroupHeader' }">
								<!--	<StandardListItem
									type="{= (${configModel>/selStn/selADP/selWpn/WESID}===${configModel>WESID} &amp;&amp; ${configModel>/selStn/selADP/selWpn/WEMID}===${configModel>WEMID})? 'Detail':'Active'}"
									selected="{= (${configModel>/selStn/selADP/selWpn/WESID}===${configModel>WESID} &amp;&amp; ${configModel>/selStn/selADP/selWpn/WEMID}===${configModel>WEMID})}"
									title="{configModel>WESDESC}"/>-->
								<CustomListItem
								selected="{= (${configModel>/selStn/selADP/selWpn/WESID}===${configModel>WESID} &amp;&amp; ${configModel>/selStn/selADP/selWpn/WEMID}===${configModel>WEMID})}"
								>
									<HBox height="2.7rem" alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginEnd">
										<Text height="100%" text="{configModel>WESDESC}"/>
										<core:Icon src="sap-icon://attachment-photo"
											visible="{= (${configModel>/selStn/selADP/selWpn/WESID}===${configModel>WESID} &amp;&amp; ${configModel>/selStn/selADP/selWpn/WEMID}===${configModel>WEMID})? true:false}"/>
									</HBox>
								</CustomListItem>
							</List>
						</ScrollContainer>
					</HBox>
					<FlexBox class="sapUiSmallMarginBegin wcCngVBox" visible="{= ${configModel>/selStn/STNMID}==='STNM_S'}" width="42%" justifyContent="Center">
						<VBox justifyContent="Center" alignItems="Center">
							<Label text="{configModel>/selStn/LTXT}" design="Bold"/>
							<!--<VBox items="{configModel>/selStn/adapter}">-->
							<!--	<GenericTile class="topTile txtAlginHeadeCenter" header="{configModel>ADPDESC}" subheader="S/N {configModel>SERNR}"  frameType="TwoByOne" ></GenericTile>-->
							<!--</VBox>-->
							<GenericTile class="topTile txtAlginHeadeCenter" header="{configModel>/selStn/adapter/1/ADPDESC}" frameType="TwoByOne"></GenericTile>
							<GenericTile class="topTile txtAlginHeadeCenter sapUiSmallMarginTop" header="{configModel>/selStn/adapter/0/ADPDESC}" frameType="TwoByOne"></GenericTile>
							<si:StatusIndicator width="3rem" height="3rem" value="{= ${configModel>/selStn/selADP/selWpn/CONECT}==='C'?100:0}">
								<si:ShapeGroup>
									<si:LibraryShape shapeId="arrow_up"/>
								</si:ShapeGroup>
								<si:propertyThresholds>
									<si:PropertyThreshold id="ptUpArrowId" toValue="100"/>
								</si:propertyThresholds>
							</si:StatusIndicator>
							<GenericTile class="middleTile txtAlginHeadeCenter" visible="{= ${configModel>/selStn/CONECT}!=='N'}" press="onConnecterPress"
								header="{parts:['configModel>/selStn/selADP/selWpn/CONECT','configModel>/selStn/selADP/selWpn/ICART'],formatter:'.formatter.wConnect'}"
								frameType="OneByOne"></GenericTile>
							<si:StatusIndicator value="{= ${configModel>/selStn/selADP/selWpn/CONECT}==='C'?100:0}" width="3rem" height="3rem">
								<si:ShapeGroup>
									<si:LibraryShape shapeId="arrow_down"/>
								</si:ShapeGroup>
								<si:propertyThresholds>
									<si:PropertyThreshold id="ptDownArrowId" toValue="100"/>
								</si:propertyThresholds>
							</si:StatusIndicator>
							<!--class="tileLayout"-->
							<!--	<GenericTile class="downTile txtAlginHeadeCenter"
								header="{configModel>/selStn/selADP/selWpn/WESDESC} {configModel>/selStn/selADP/selWpn/ADPDESC}" frameType="TwoByOne"
								blocked="{= ${configModel>/selStn/selADP/selWpn/POT}==='T'?true:false}"
								press="onWeaponTileClk"></GenericTile>-->
							<GenericTile class="downTile txtRemoveHeader" press="onWeaponTileClk"
								blocked="{= ${configModel>/selStn/selADP/selWpn/POT}==='T'?true:false}">
								<TileContent>
									<HBox width="100%" justifyContent="SpaceBetween">
										<Label class="sapUiSmallMarginBegin" text="{configModel>/selStn/selADP/selWpn/WESDESC} {configModel>/selStn/selADP/selWpn/ADPDESC}"/>
										<Label class="sapUiSmallMarginEnd" text="{= ${configModel>/selStn/ISSER}==='X'?${configModel>/selStn/selADP/selWpn/srcount}:${configModel>/selStn/TOTQTY}}"/>
									</HBox>
								</TileContent>
							</GenericTile>
							<!--subheader="{configModel>/selStn/selADP/selWpn/WESDESC}"-->
						</VBox>
					</FlexBox>
					<FlexBox class="sapUiSmallMarginBegin wcCngVBox" visible="{= ${configModel>/selStn/STNMID}==='STNM_O'}" width="42%" justifyContent="Center">
						<VBox justifyContent="Center" alignItems="Center">
							<VBox>
								<HBox justifyContent="Center" alignContent="Center" alignItems="Center">
									<Input value="{configModel>/selStn/TOTQTY}" maxLength="{configModel>/selStn/MAX}" liveChange="onOtherCountChange"
										change="onOtherCountChange"/>
									<Label class="sapUiSmallMarginBegin" text="(Counter set {configModel>/selStn/MAX})"/>
								</HBox>
								<!--<RadioButtonGroup columns="1" selectedIndex="{= (${configModel>/selStn/HCFLAG}==='H')?0:1}"-->
								<!--	visible="{= (${configModel>/selStn/STNMID}==='STNM_O' &amp;&amp; ${configModel>/selStn/STNSID}==='STNS_102')}" select="onHotColdSelect"-->
								<!--	class="sapUiMediumMarginBottom">-->
								<!--	<RadioButton text="Hot"/>-->
								<!--	<RadioButton text="Cold"/>-->
								<!--</RadioButtonGroup>-->
							</VBox>
						</VBox>
					</FlexBox>
					<VBox class="sapUiSmallMarginBegin" width="20%">
						<Image src="{path:'configModel>/selStn/STNSID',formatter:'.formatter.srvWeaponAHImage'}" height="28rem" width="17rem"/>
					</VBox>
				</HBox>
			</HBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Back" press="onNavBack"/>
				<Button text="Sign off" type="Emphasized" enabled="{= ${configModel>/stns/0/APPRCOUNT}===0}" press="onStationSignOff"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>